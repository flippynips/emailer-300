{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [ "es2018", "dom" ],
    "strict": false,
    "strictFunctionTypes": false,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./assets/**/*"
  ]
}